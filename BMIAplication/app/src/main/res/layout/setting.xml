<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <!--<TextView
            android:id="@+id/setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textSize="30dp"
            android:layout_marginBottom="30dp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_passwordlama"
            android:layout_width="fill_parent"
            android:layout_below="@id/setting"
            android:layout_height="wrap_content"
            android:text="Password lama anda"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_passwordlama"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_passwordlama"
            android:hint="Masukan password lama anda"
            android:inputType="textPassword"
            android:textColor="#0099cc" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_below="@id/et_passwordlama"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Password baru"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_password"
            android:hint="Masukan password baru anda"
            android:inputType="textPassword"
            android:textColor="#0099cc" />

        <TextView
            android:id="@+id/tv_password1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_password"
            android:text="@string/password1_r"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_password1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_password1"
            android:hint="@string/password1_hint_r"
            android:inputType="textPassword"
            android:textColor="#0099cc" />



        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_password1"
            android:text="@string/nama_r"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_nama"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama"
            android:hint="@string/nama_hint_r"
            android:textColor="#0099cc" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_nama"
            android:text="@string/email_r"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email"
            android:hint="@string/email_hint_r"
            android:inputType="textEmailAddress"
            android:textColor="#0099cc" />

        <TextView
            android:id="@+id/tv_hp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_email"
            android:text="@string/hp_r"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_hp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hp"
            android:hint="@string/hp_hint_r"
            android:textColor="#0099cc" />

        <TextView
            android:id="@+id/tv_ttl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_hp"
            android:text="@string/ttl_r"
            android:textColor="#000" />

        <EditText
            android:id="@+id/et_ttl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ttl"
            android:hint="Tanggal lahir anda"
            android:textColor="#0099cc" />

        <Button
            android:id="@+id/btn_ubah"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_ttl"
            android:background="#0099cc"
            android:text="Ubah"
            android:textColor="#fff" />!-->

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/Listrecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10px">
        </ListView>

    </RelativeLayout>
